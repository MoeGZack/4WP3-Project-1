<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gym Membership Tracking</title>
  <link rel="stylesheet" href="/styles.css">
 </head>
 <body>
 <div class="wrapper">
    <header>
     <h1>Ameen Fitness</h1>
     <img src="Weight.jpg" width="100" />

    </header>
    

    <section>
        <h2>Search Members</h2>
        <div class="search">
    <form action="/searchMember" method="POST">
        
        <input type="text"  name="searchTerm" placeholder="Search name or phone number" >
        <button type="submit">Search</button>
    </form>
        </div>
    </section>
        <br> 

    
    <section>
        <div class="message">
        <strong>Message:</strong> {{message}}
        </div>
    </section>   
    
    

    <section>
        <h2>Member Info</h2>
        <div class="member-info">
        <form action="/memberResults" method="POST">

            <div class="test">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="{{member.firstName}}" >
            </div>

            <div class="test">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="{{member.lastName}}" >
            </div>

            <div class="test">
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" value="{{member.email}}" >
            </div>

            <div class="test">
            <label for="phone">Phone Number:</label>
            <input type="text" id="phone" name="phone" value="{{member.phoneNumber}}" >
            </div>

            <div class="test">
            <label for="plan">Membership Type:</label>
            <select id="plan" name="plan" placeholder=NULL>
                <option value="Basic" {{#isBasic}}selected{{/isBasic}}>Basic</option>
                <option value="Intermediate" {{#isIntermediate}}selected{{/isIntermediate}}>Intermediate</option>
                <option value="Ultra" {{#isUltra}}selected{{/isUltra}}>Ultra</option>
            </select>
            </div>

            <div class="test">
            <label for="status">Membership Status:</label>
            <select id="status" name="status" placeholder=NULL>
                <option value="Active" {{#isActive}}selected{{/isActive}}>Active</option>
                <option value="Hold" {{#isHold}}selected{{/isHold}}>Hold</option>
                <option value="Cancelled" {{#isCancelled}}selected{{/isCancelled}}>Cancelled</option>
            </select>
            </div>
            </form>
      </div>
    </section>

    <section>
        <h2>Actions</h2>
       <div class="actions">
        <form  action="/action" method="POST">

            
            <button type="submit" name="action" value="checkin">Check In</button>
           
            <button type="submit" name="action" value="editmember">Edit Member</button>
            

            <button type="submit" name="action" value="deleteMember">Delete Member</button>
          
            <button type="submit"  name="action" value="cancelMember">Cancel Member</button>
            
           
            <button type="submit" name="action" value="upgradeMember">Upgrade Member</button>
           
         
            <button type="submit"  name="action" value="payment">Payment</button>
         </form>
       </div>
        
       
    </section>
 </div>   
</body>
</html>